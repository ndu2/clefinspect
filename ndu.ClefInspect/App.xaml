<Application x:Name="Clef" x:Class="ndu.ClefInspect.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Clef_Startup" Exit="Clef_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="/Resources/ClefIcons.xaml" />
                <ResourceDictionary Source="/Resources/Close.xaml" />
                <ResourceDictionary Source="/Resources/Pin.xaml" />
                <ResourceDictionary Source="/Resources/DeleteFilter.xaml" />
                <ResourceDictionary Source="/Resources/Download.xaml" />
                <ResourceDictionary Source="/Resources/Filter.xaml" />
                <ResourceDictionary Source="/Resources/Pause.xaml" />
                <ResourceDictionary Source="/Resources/QuickRefresh.xaml" />
                <ResourceDictionary Source="/Resources/StatusErrorNoColor.xaml" />
                <ResourceDictionary Source="/Resources/Empty.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="TailToggleButton" TargetType="ToggleButton">
                <Style.Setters>
                    <Setter Property="Content" Value="{StaticResource icon_download}" />
                </Style.Setters>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Content" Value="{StaticResource icon_download}" />
                    </Trigger>
                    <Trigger Property="IsChecked" Value="False">
                        <Setter Property="Content" Value="{StaticResource icon_pause}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="PinToggleButton" TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <ContentControl x:Name="PinToggleButtonContent" Content="{StaticResource icon_empty}"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="PinToggleButtonContent" Property="Content" Value="{StaticResource icon_pin}" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="PinToggleButtonContent" Property="Content" Value="{StaticResource icon_empty}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
