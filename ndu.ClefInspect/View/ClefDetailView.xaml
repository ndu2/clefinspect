<UserControl x:Class="ndu.ClefInspect.View.ClefDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ndu.ClefInspect.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:clefview="clr-namespace:ndu.ClefInspect.ViewModel.ClefView"
             d:DataContext="{d:DesignInstance Type=clefview:ClefLineViewDetailModel}" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"
               FontWeight="Bold" Text="{Binding Header}" />
        <TextBox Grid.Row="1" Grid.Column="0" 
                 Background="{Binding Background}"
                 IsReadOnly="True"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" 
                 Text="{Binding Text, Mode=OneWay}" />
    </Grid>
</UserControl>
