<UserControl x:Class="ndu.ClefInspect.View.ClefFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:System="clr-namespace:System;assembly=mscorlib" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ndu.ClefInspect.View"
             xmlns:clefview="clr-namespace:ndu.ClefInspect.ViewModel.ClefView"
             xmlns:helper="clr-namespace:ndu.ClefInspect.ViewModel.Helper"
             d:DataContext="{d:DesignInstance Type=clefview:ClefFilterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <System:Boolean x:Key="FalseValue">False</System:Boolean>
        <System:Boolean x:Key="TrueValue">True</System:Boolean>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"
            FontWeight="Bold" Text="{Binding Name}" />
        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}" helper:TextBoxHelper.Placeholder="Search"/>
        <Button Grid.Row="0" Grid.Column="2"
                Content="{StaticResource icon_deleteFilter}" Command="{Binding ClearSearchFilter}" />
        <Button Grid.Row="0" Grid.Column="3"
                Content="{StaticResource icon_close}" Command="{Binding ChangeVisibility}" CommandParameter="{StaticResource FalseValue}" />
        <ListBox Grid.Row="1" Grid.Column="0"
                 Grid.ColumnSpan="4" HorizontalContentAlignment="Stretch" VirtualizingPanel.VirtualizationMode="Recycling"
                 ItemsSource="{Binding FilterValues}" >
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Check all filters" Command="{Binding CheckAll}" />
                    <MenuItem Header="Check visible filters only" Command="{Binding CheckVisible}" />
                    <MenuItem Header="Check visible filters" Command="{Binding CheckAddVisible}" />
                    <MenuItem Header="Uncheck all filters" Command="{Binding CheckNone}" />
                    <MenuItem Header="Uncheck visible filters" Command="{Binding CheckRemoveVisible}" />
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.Resources>
                <local:BooleanVisibilityCollapsedConverter x:Key="BooleanVisibilityCollapsedConverter" />
            </ListBox.Resources>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{Binding Visible, Converter={StaticResource BooleanVisibilityCollapsedConverter}}" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding FilterValue.Enabled}" Width="20" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FilterValue.Value}"  />
                        <TextBlock Grid.Row="0" Grid.Column="2" Margin="2,0,0,0" Text="{Binding FilterValue.Amount}" HorizontalAlignment="Right" />
                        </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
